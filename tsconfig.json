{
	"compilerOptions": {
		"allowJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"lib": ["dom", "dom.iterable", "esnext"],
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": true,
		"paths": {
			"@/*": ["./*"],
			"@/api/*": ["./app/api/*"],
			"@/components/*": ["./src/components/*"]
		},
		"plugins": [
			{
				"name": "next"
			}
		],
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": false,
		"strictNullChecks": false,
		"target": "esnext"
	},
	"include": [
		"next-env.d.ts",
		".next/types/**/*.ts",
		".next/dev/types/**/*.ts",
		".next\\dev/types/**/*.ts",
		"**/*.*ts",
		"**/*.tsx",
		"**/*.*js",
		"**/*.jsx"
	],
	"exclude": ["node_modules", "out"]
}
