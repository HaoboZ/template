{
	"compilerOptions": {
		"target"           : "esnext",
		"module"           : "commonjs",
		"lib"              : [
			"esnext"
		],
		"allowJs"          : true,
		"outDir"           : "build",
		"skipLibCheck"     : true,
		"rootDir"          : ".",
		"strict"           : false,
		"noImplicitAny"    : false,
		"esModuleInterop"  : true,
		"resolveJsonModule": true,
		"moduleResolution" : "node"
	},
	"include"        : [
		"**/*.ts",
		"**/*.tsx"
	]
}
